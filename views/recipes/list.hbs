<h1>All Magic Recipes</h1>
<form action="/recipes">

    <label for="cousine-select">Choose a cousine:</label>
    <select name="cousine" id="cosine-select" onchange="this.form.submit()">
    <option value="">--Please choose an option--</option>
    <option value="latinamerican">Lanin American food</option>
    <option value="mediterranian">Mediterranian food</option>
    <option value="slavic">Slavic food</option>
    <option value="asian">Asian food</option>
    <option value="italian">Italian food</option>
    </select>
</form>

{{#each recipes}}
<h4>{{cousine}}</h4>
<h3>{{title}}</h3>
<img src={{imageUrl}} alt="recipe"/>
<h4>{{duration}}</h4>
<h4>{{ingredients}}</h4>
<p>{{preparation}}</p>


<p>{{owner.username}}</p>



